extends ../layout.pug
block content 
    h2 Are you sure you want to delete this game #{id}? 
    
    .container.text-center
        .row
            .col 
                form(action="/games/delete/" + id method="post")
                    .d-grid.gap-2.col-6.mx-auto
                        button.btn.btn-primary.btn-lg(type='submit') YES 
    
            .col 
                form(action="/games/redirect" method="get") 
                    .d-grid.gap-2.col-6.mx-auto
                        button.btn.btn-primary.btn-lg(type='submit') NO 

